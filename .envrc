# Fiora 环境变量配置
# 强制所有工具使用自定义临时目录，而不是 /tmp

# Use a safe default temp dir across platforms/containers.
# Users can override by setting TMPDIR/TMP/TEMP in their environment.
export TMPDIR=${TMPDIR:-/tmp}
export TMP=${TMP:-$TMPDIR}
export TEMP=${TEMP:-$TMPDIR}

# Node.js v8-compile-cache 配置
export NODE_OPTIONS="--max-old-space-size=4096"

# 确保临时目录存在
mkdir -p "$TMPDIR" 2>/dev/null || true

